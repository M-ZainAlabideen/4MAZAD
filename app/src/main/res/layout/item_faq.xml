<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/item_faq_tv_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/up_arrow"
        android:drawablePadding="40dp"
        android:text="How do I participate in different auctions?"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAlignment="viewStart"
        android:fontFamily="@font/raleway_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_faq_tv_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/faq_box"
        android:padding="15dp"
        android:textAlignment="viewStart"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/raleway_regular"
        android:text="You can enter in the different auctions you must enter the details of the auctions displayed in one of the screens and then enter the amount you want to bid and then press the bid button"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/item_faq_tv_question"
        app:layout_constraintStart_toStartOf="@+id/item_faq_tv_question"
        app:layout_constraintTop_toBottomOf="@+id/item_faq_tv_question" />
</androidx.constraintlayout.widget.ConstraintLayout>