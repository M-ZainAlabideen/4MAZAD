<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardElevation="7dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item_notification_iv_indicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/noti_side_border_red" />

    <TextView
        android:id="@+id/item_notification_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/8/2019"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintStart_toEndOf="@+id/item_notification_iv_indicator"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_notification_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:lines="2"
        android:fontFamily="@font/raleway_regular"
        android:textAlignment="viewStart"
        android:text="There are 5 new bids on your auction please check it..."
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_notification_tv_date"
        app:layout_constraintTop_toBottomOf="@+id/item_notification_tv_date" />


    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_notification_iv_indicator" />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>